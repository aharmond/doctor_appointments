<h1>New Doctor<h1>
<%= form_with(model: @doctor, local: true, class: "ui form") do |f| %>
  <div>What is <%= current_user.first_name %>'s specialty?</div>
  <div class="field">
    <%= f.label :specialty %>
    <%= f.text_field :specialty %>
  </div>
    <%= f.hidden_field :user_id, :value => current_user.id %>

    <%= f.submit nil %>
<% end %>